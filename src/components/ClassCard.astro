--- 
const {title, image, shortDescription, slug} = Astro.props;
---

<a href={`/classes/${slug}`} id="card">
    <img src={image} alt={title} />
    <h2>{title}</h2>
    <p>{shortDescription}</p>
</a>

<style>
    #card {
        display: block;
        background: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        text-decoration: none;
        color: black;
        transition: transform 0.2s ease;
    }

    #card:hover {
        transform: translateY(-5px);
    }

    #card img {
        width: 100%;
        height: 150px;
        object-fit: cover;
    }

    #card h2 {
        margin: 10px;
    }

    #card p {
        margin: 0 10px 10px;
        font-size: 0.9rem;
    }
</style>